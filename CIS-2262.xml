<outline created="2010-04-08" xmlns="http://www.vtc.vsc.edu/COML_0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.vtc.vsc.edu/COML_0.0 COML.xsd">

  <summary>
    <authors>
      <author>Craig A. Damon</author>
    </authors>
    <department-program>Computer Information Systems</department-program>
    <number>CIS-2262</number>
    <title>Introduction to Java Programming II</title>
    <prerequisites>
      <AND>
        <course>CIS-2261</course>
      </AND>
    </prerequisites>
    <credits>2</credits>
    <graded>true</graded>
    <time lecture="0" laboratory="2" studio="0" recitation="0" study="4"/>
    <semesters>
      <semester>Spring</semester>
    </semesters>
    <description>A continuation of CIS-2261, Introduction to Programming in Java, the course develops a more solid foundation for future programming.</description>
  </summary>
  <short-title>Intermediate Java</short-title>
  <course-level>1000</course-level>
  <required-texts>
    <book>
      <title>Java for Everyone</title>
      <edition>first</edition>
      <authors>
        <author>Cay Horstmann</author>
      </authors>
      <publisher>Wiley</publisher>
      <copyright>2010</copyright>
      <ISBN>780471-791911</ISBN>
    </book>
  </required-texts>
  <course-outcomes>
    <outcome>Understand and be able to use visibility modifiers, including public, private and protected</outcome>
    <outcome>Understand and be able to define simple inheritance of classes</outcome>
    <outcome>Understand and be able to use class definition modifiers, including static, abstract, final</outcome>
    <outcome>Understand and be able to define interfaces</outcome>
    <outcome>Understand recursion</outcome>
    <outcome>Understand and be able to use Java collection classes, including Set, List and Map</outcome>
    <outcome>Understand and be able to handle exceptions</outcome>
  </course-outcomes>
  <course-content>
    <topic hours="2.0">visibility</topic>
    <topic hours="5.0">inheritance</topic>
    <topic hours="2.0">class modifiers</topic>
    <topic hours="1.0">interfaces</topic>
    <topic hours="7.0">recursuon</topic>
    <topic hours="3.0">Collection, Set and List</topic>
    <topic hours="1.0">Maps</topic>
    <topic hours="4.0">exceptions</topic>
    <topic hours="3.0">optional topics, such as enums or GUI programming</topic>
  </course-content>
  <delivery-method>face-to-face</delivery-method>
</outline>
